<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="@string/title_default_settings">

        <Preference
            android:key="restore_pref"
            android:summary="@string/summary_restore_folder"
            android:title="@string/title_restore_folder" />

        <Preference
            android:key="backup_pref"
            android:summary="@string/summary_backup_folder"
            android:title="@string/title_backup_folder" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="@string/title_nfc_settings">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/key_fast_write"
            android:summary="@string/summary_fast_write"
            android:title="@string/chckbx_fast_write" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="@string/title_misc_settings">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/key_dark_mode"
            android:summary="@string/summary_dark_mode"
            android:title="@string/chckbx_dark_mode" />

    </PreferenceCategory>

</PreferenceScreen>