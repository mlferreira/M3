<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="pref_key_storage_settings"
        android:title="Default Settings">
        <Preference
            android:key="restore_pref"
            android:summary="folder location"
            android:title="Restore Folder" />
        <Preference
            android:key="backup_pref"
            android:summary="folder location"
            android:title="Backup/Dump Folder" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="useFastWrite_pref"
            android:summary="Strongly Recommended"
            android:title="Use Fast-Write" />
    </PreferenceCategory>
</PreferenceScreen>